---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Autohaus Eckenberger | Nutzfahrzeuge, PKW & Quads in Waldsassen">
    <main>
        <!-- Basic Hero for initial check -->
        <section
            class="relative h-screen flex items-center justify-center bg-navy text-white overflow-hidden"
        >
            <div class="absolute inset-0 opacity-20">
                <!-- Placeholder for hero background -->
                <div
                    class="w-full h-full bg-gradient-to-br from-navy to-charcoal"
                >
                </div>
            </div>

            <div class="container mx-auto px-6 relative z-10 text-center">
                <h1
                    class="text-5xl md:text-7xl font-extrabold mb-6 tracking-tight"
                >
                    PREMIUM <span class="text-orange">NUTZFAHRZEUGE</span>
                </h1>
                <p
                    class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto text-gray-300"
                >
                    Ihr Partner für Sprinter, Transporter und PKW in Waldsassen.
                    Über 100 Fahrzeuge sofort verfügbar.
                </p>
                <div
                    class="flex flex-col sm:flex-row items-center justify-center gap-4"
                >
                    <a
                        href="/fahrzeugbestand"
                        class="px-8 py-4 bg-orange hover:bg-orange/90 text-white font-bold rounded-lg transition-all transform hover:scale-105"
                    >
                        Fahrzeugbestand ansehen
                    </a>
                    <a
                        href="#kontakt"
                        class="px-8 py-4 border-2 border-white hover:bg-white hover:text-navy text-white font-bold rounded-lg transition-all"
                    >
                        Kontakt aufnehmen
                    </a>
                </div>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="py-24 bg-cream">
            <div class="container mx-auto px-6">
                <div
                    class="flex flex-col md:flex-row justify-between items-end mb-12"
                >
                    <div>
                        <h2 class="text-4xl font-bold text-navy mb-4">
                            FAHRZEUGKATEGORIEN
                        </h2>
                        <div class="w-20 h-1 bg-orange"></div>
                    </div>
                    <p class="text-gray-600 max-w-md mt-6 md:mt-0">
                        Qualitätsgeprüfte Fahrzeuge für jeden Einsatzbereich.
                        Vom Lastesel bis zum Freizeitgefährten.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        ["Nutzfahrzeuge", "PKW & SUVs", "Quads & UTVs"].map(
                            (cat) => (
                                <div class="group relative aspect-[4/5] overflow-hidden rounded-2xl bg-white shadow-xl transition-all hover:-translate-y-2">
                                    <div class="absolute inset-0 bg-gradient-to-t from-navy gap-4 to-transparent opacity-60" />
                                    <div class="absolute bottom-0 p-8">
                                        <h3 class="text-2xl font-bold text-white mb-2">
                                            {cat}
                                        </h3>
                                        <p class="text-gray-300 text-sm mb-4">
                                            Entdecken Sie unser aktuelles
                                            Angebot.
                                        </p>
                                        <div class="w-10 h-1 bg-orange transition-all group-hover:w-full" />
                                    </div>
                                </div>
                            ),
                        )
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>
