---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import TrustFeatures from "../components/TrustFeatures.astro";
import VehicleCategories from "../components/VehicleCategories.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Autohaus Eckenberger | Nutzfahrzeuge, PKW & Quads in Waldsassen">
    <Header />
    <main>
        <!-- Hero Section -->
        <section
            class="relative min-h-[90vh] flex items-center bg-navy text-white overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <!-- Background Image (Sprinter/Nutzfahrzeug Fokus) -->
                <img
                    src="https://images.unsplash.com/photo-1600320844678-430930335099?auto=format&fit=crop&q=80&w=1920"
                    alt="Sprinter Nutzfahrzeug"
                    class="w-full h-full object-cover opacity-40 grayscale"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-r from-navy via-navy/60 to-transparent"
                >
                </div>
            </div>

            <div class="container mx-auto px-6 relative z-10 py-20">
                <div class="max-w-3xl">
                    <div class="flex items-center gap-3 mb-8">
                        <div class="w-12 h-1 bg-orange"></div>
                        <span
                            class="text-orange font-black uppercase tracking-[0.3em] text-sm"
                            >Qualität seit Generationen</span
                        >
                    </div>

                    <h1
                        class="text-5xl md:text-8xl font-black mb-8 leading-[0.9] tracking-tighter uppercase"
                    >
                        PREMIUM <br />
                        <span class="text-orange">NUTZFAHRZEUGE</span>
                    </h1>

                    <p
                        class="text-xl md:text-2xl mb-12 text-gray-300 max-w-xl leading-relaxed"
                    >
                        Ihr spezialisierter Partner für Sprinter, Transporter
                        und gepflegte PKW in Waldsassen. Entdecken Sie über 100
                        Fahrzeuge vor Ort.
                    </p>

                    <div class="flex flex-col sm:flex-row items-center gap-6">
                        <a
                            href="/fahrzeugbestand"
                            class="w-full sm:w-auto px-10 py-5 bg-orange hover:bg-orange/90 text-white font-black rounded-xl transition-all transform hover:scale-105 shadow-xl shadow-orange/20 uppercase tracking-wider text-center"
                        >
                            Fahrzeugbestand ansehen
                        </a>
                        <a
                            href="#kontakt"
                            class="w-full sm:w-auto px-10 py-5 border-2 border-white hover:bg-white hover:text-navy text-white font-black rounded-xl transition-all uppercase tracking-wider text-center"
                        >
                            Kontakt aufnehmen
                        </a>
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div
                class="absolute bottom-10 left-1/2 -translate-x-1/2 hidden md:block animate-bounce"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-white/30"
                    ><path d="m7 13 5 5 5-5"></path><path d="m7 6 5 5 5-5"
                    ></path></svg
                >
            </div>
        </section>

        <TrustFeatures />
        <VehicleCategories />
        <ContactSection />
    </main>
    <Footer />
</Layout>
