---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import TrustFeatures from "../components/TrustFeatures.astro";
import VehicleCategories from "../components/VehicleCategories.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Autohaus Eckenberger | Nutzfahrzeuge, PKW & Quads in Waldsassen">
    <Header />
    <main>
        <!-- Hero Section -->
        <section
            class="relative min-h-[90vh] flex items-center bg-navy text-white overflow-hidden hero-section group"
        >
            <!-- Pure CSS Scroll Snap Carousel -->
            <div
                class="absolute inset-0 z-0 hero-carousel-container flex overflow-x-auto snap-x snap-mandatory scroll-smooth hide-scrollbar w-full h-full"
            >
                <!-- Slide 1: Premium Sprinter -->
                <a
                    href="/fahrzeugbestand"
                    class="relative min-w-full h-full snap-center block"
                    aria-label="Zum Fahrzeugbestand"
                >
                    <img
                        src="https://images.pexels.com/photos/2085527/pexels-photo-2085527.jpeg?auto=compress&cs=tinysrgb&w=1920"
                        alt="Sprinter Nutzfahrzeug"
                        class="w-full h-full object-cover"
                        loading="eager"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-navy via-navy/80 to-transparent pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Slide 2: Sports Car / PKW -->
                <a
                    href="/fahrzeugbestand"
                    class="relative min-w-full h-full snap-center block"
                    aria-label="Zum Fahrzeugbestand"
                >
                    <img
                        src="https://images.pexels.com/photos/337909/pexels-photo-337909.jpeg?auto=compress&cs=tinysrgb&w=1920"
                        alt="Porsche Panamera"
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-navy via-navy/80 to-transparent pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Slide 3: Robust Offroader -->
                <a
                    href="/fahrzeugbestand"
                    class="relative min-w-full h-full snap-center block"
                    aria-label="Zum Fahrzeugbestand"
                >
                    <img
                        src="https://images.pexels.com/photos/1035108/pexels-photo-1035108.jpeg?auto=compress&cs=tinysrgb&w=1920"
                        alt="G-Klasse Offroad"
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-navy via-navy/80 to-transparent pointer-events-none"
                    >
                    </div>
                </a>
            </div>

            <div
                class="container mx-auto px-6 relative z-10 py-32 flex flex-col justify-end min-h-[90vh] pointer-events-none"
            >
                <div class="max-w-4xl pb-12 pointer-events-auto">
                    <div class="flex items-center gap-3 mb-8 reveal">
                        <div class="w-12 h-1 bg-orange"></div>
                        <span
                            class="text-white/80 font-bold uppercase tracking-[0.4em] text-xs"
                            >Innovation & Zuverlässigkeit</span
                        >
                    </div>

                    <h1
                        class="text-6xl md:text-8xl lg:text-[7rem] font-black mb-10 leading-[0.9] tracking-tighter uppercase reveal delay-100"
                    >
                        PREMIUM <br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-orange to-[#CC5833]"
                            >FAHRZEUGE</span
                        >
                    </h1>

                    <p
                        class="text-xl md:text-2xl mb-16 text-white/70 max-w-2xl leading-relaxed font-light reveal delay-200"
                    >
                        Ihr Boutique-Partner für exzellente Sprinter,
                        Transporter und handverlesene PKW. Präzision trifft auf
                        Leidenschaft.
                    </p>

                    <div
                        class="flex flex-col sm:flex-row items-center gap-6 reveal delay-300 relative z-30"
                    >
                        <a
                            href="/fahrzeugbestand"
                            class="group/btn relative overflow-hidden w-full sm:w-auto px-12 py-5 bg-white text-navy font-black rounded-[2rem] transition-all duration-700 transform hover:scale-[1.03] shadow-2xl hover:shadow-white/20 uppercase tracking-widest text-center text-sm"
                        >
                            <div
                                class="absolute inset-0 bg-orange translate-y-[100%] group-hover/btn:translate-y-0 transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] z-0"
                            >
                            </div>
                            <span
                                class="relative z-10 group-hover/btn:text-white transition-colors duration-500 flex items-center gap-3 justify-center"
                            >
                                Bestand ansehen
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="3"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="transition-transform group-hover/btn:translate-x-1"
                                    ><line x1="5" y1="12" x2="19" y2="12"
                                    ></line><polyline points="12 5 19 12 12 19"
                                    ></polyline></svg
                                >
                            </span>
                        </a>
                        <a
                            href="#kontakt"
                            class="group/btn relative overflow-hidden w-full sm:w-auto px-12 py-5 border border-white/30 text-white font-bold rounded-[2rem] transition-all duration-700 transform hover:scale-[1.03] hover:border-white/0 uppercase tracking-widest text-center text-sm"
                        >
                            <div
                                class="absolute inset-0 bg-white/10 translate-y-[100%] group-hover/btn:translate-y-0 transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] z-0 backdrop-blur-md"
                            >
                            </div>
                            <span class="relative z-10">Kontakt aufnehmen</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div
                class="absolute bottom-10 left-1/2 -translate-x-1/2 hidden md:block animate-bounce z-20 pointer-events-none"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-white/30"
                    ><path d="m7 13 5 5 5-5"></path><path d="m7 6 5 5 5-5"
                    ></path></svg
                >
            </div>

            <!-- Mobile Swipe Hint -->
            <div
                class="absolute bottom-4 right-4 flex items-center gap-2 z-20 pointer-events-none md:hidden bg-navy/60 backdrop-blur px-3 py-1.5 rounded-full text-xs text-white/70"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
                >
                Wischen
            </div>
        </section>

        <TrustFeatures />
        <VehicleCategories />
        <ContactSection />
    </main>
    <Footer />
</Layout>
