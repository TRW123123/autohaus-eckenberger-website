---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import TrustFeatures from "../components/TrustFeatures.astro";
import VehicleCategories from "../components/VehicleCategories.astro";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Autohaus Eckenberger | Nutzfahrzeuge, PKW & Quads in Waldsassen">
    <Header />
    <main>
        <!-- Hero Section -->
        <section
            class="relative min-h-[90vh] flex items-center bg-navy text-white overflow-hidden hero-section"
        >
            <div class="absolute inset-0 z-0 hero-carousel-container">
                <!-- Slide 1: Premium Sprinter -->
                <div
                    class="hero-slide absolute inset-0 opacity-100 transition-opacity duration-1000 ease-in-out"
                >
                    <img
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/ca/Mercedes-Benz_Sprinter_313_CDI_%28W_906%29.jpg/1200px-Mercedes-Benz_Sprinter_313_CDI_%28W_906%29.jpg"
                        alt="Sprinter Nutzfahrzeug"
                        class="w-full h-full object-cover scale-105 transition-transform duration-[10000ms] ease-out slide-img"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-navy via-navy/80 to-transparent"
                    >
                    </div>
                </div>

                <!-- Slide 2: Sports Car / PKW -->
                <div
                    class="hero-slide absolute inset-0 opacity-0 transition-opacity duration-1000 ease-in-out"
                >
                    <img
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1d/Porsche_Panamera_4S_Diesel_-_Mondscheinblau.jpg/1200px-Porsche_Panamera_4S_Diesel_-_Mondscheinblau.jpg"
                        alt="Porsche Panamera"
                        class="w-full h-full object-cover scale-100 transition-transform duration-[10000ms] ease-out slide-img"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-navy via-navy/80 to-transparent"
                    >
                    </div>
                </div>

                <!-- Slide 3: Robust Offroader -->
                <div
                    class="hero-slide absolute inset-0 opacity-0 transition-opacity duration-1000 ease-in-out"
                >
                    <img
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/82/Mercedes-Benz_G_350_d_%28W_463%29.jpg/1200px-Mercedes-Benz_G_350_d_%28W_463%29.jpg"
                        alt="G-Klasse Offroad"
                        class="w-full h-full object-cover scale-100 transition-transform duration-[10000ms] ease-out slide-img"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-navy via-navy/80 to-transparent"
                    >
                    </div>
                </div>
            </div>

            <!-- Slide Progress Indicators -->
            <div class="absolute bottom-10 right-10 flex gap-3 z-20">
                <button
                    class="hero-dot w-12 h-1.5 rounded-full bg-orange transition-all duration-300"
                    aria-label="Slide 1"></button>
                <button
                    class="hero-dot w-6 h-1.5 rounded-full bg-white/30 hover:bg-white/60 transition-all duration-300"
                    aria-label="Slide 2"></button>
                <button
                    class="hero-dot w-6 h-1.5 rounded-full bg-white/30 hover:bg-white/60 transition-all duration-300"
                    aria-label="Slide 3"></button>
            </div>

            <div
                class="container mx-auto px-6 relative z-10 py-32 flex flex-col justify-end min-h-[90vh]"
            >
                <div class="max-w-4xl pb-12">
                    <div class="flex items-center gap-3 mb-8 reveal">
                        <div class="w-12 h-1 bg-orange"></div>
                        <span
                            class="text-white/80 font-bold uppercase tracking-[0.4em] text-xs"
                            >Innovation & Zuverlässigkeit</span
                        >
                    </div>

                    <h1
                        class="text-6xl md:text-8xl lg:text-[7rem] font-black mb-10 leading-[0.9] tracking-tighter uppercase reveal delay-100"
                    >
                        PREMIUM <br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-orange to-[#CC5833]"
                            >FAHRZEUGE</span
                        >
                    </h1>

                    <p
                        class="text-xl md:text-2xl mb-16 text-white/70 max-w-2xl leading-relaxed font-light reveal delay-200"
                    >
                        Ihr Boutique-Partner für exzellente Sprinter,
                        Transporter und handverlesene PKW. Präzision trifft auf
                        Leidenschaft.
                    </p>

                    <div
                        class="flex flex-col sm:flex-row items-center gap-6 reveal delay-300"
                    >
                        <a
                            href="/fahrzeugbestand"
                            class="group relative overflow-hidden w-full sm:w-auto px-12 py-5 bg-white text-navy font-black rounded-[2rem] transition-all duration-700 transform hover:scale-[1.03] shadow-2xl hover:shadow-white/20 uppercase tracking-widest text-center text-sm"
                        >
                            <div
                                class="absolute inset-0 bg-orange translate-y-[100%] group-hover:translate-y-0 transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] z-0"
                            >
                            </div>
                            <span
                                class="relative z-10 group-hover:text-white transition-colors duration-500 flex items-center gap-3 justify-center"
                            >
                                Bestand ansehen
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="3"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="transition-transform group-hover:translate-x-1"
                                    ><line x1="5" y1="12" x2="19" y2="12"
                                    ></line><polyline points="12 5 19 12 12 19"
                                    ></polyline></svg
                                >
                            </span>
                        </a>
                        <a
                            href="#kontakt"
                            class="group relative overflow-hidden w-full sm:w-auto px-12 py-5 border border-white/30 text-white font-bold rounded-[2rem] transition-all duration-700 transform hover:scale-[1.03] hover:border-white/0 uppercase tracking-widest text-center text-sm"
                        >
                            <div
                                class="absolute inset-0 bg-white/10 translate-y-[100%] group-hover:translate-y-0 transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] z-0 backdrop-blur-md"
                            >
                            </div>
                            <span class="relative z-10">Kontakt aufnehmen</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div
                class="absolute bottom-10 left-1/2 -translate-x-1/2 hidden md:block animate-bounce z-20"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="text-white/30"
                    ><path d="m7 13 5 5 5-5"></path><path d="m7 6 5 5 5-5"
                    ></path></svg
                >
            </div>
        </section>

        <script>
            // Simple robust interval-based carousel for Hero
            function initHeroCarousel() {
                const slides = document.querySelectorAll(".hero-slide");
                const dots = document.querySelectorAll(".hero-dot");
                if (slides.length === 0) return;

                let currentSlide = 0;
                let interval;

                const showSlide = (index) => {
                    // Reset all
                    slides.forEach((slide, i) => {
                        slide.classList.remove("opacity-100");
                        slide.classList.add("opacity-0");
                        const img = slide.querySelector(".slide-img");
                        if (img) img.classList.remove("scale-105");
                        if (img) img.classList.add("scale-100");

                        // Dots
                        if (dots[i]) {
                            dots[i].classList.remove("w-12", "bg-orange");
                            dots[i].classList.add("w-6", "bg-white/30");
                        }
                    });

                    // Activate target
                    slides[index].classList.remove("opacity-0");
                    slides[index].classList.add("opacity-100");
                    const activeImg = slides[index].querySelector(".slide-img");

                    // Trigger reflow to restart CSS scale animation
                    if (activeImg) {
                        void activeImg.offsetWidth;
                        activeImg.classList.remove("scale-100");
                        activeImg.classList.add("scale-105");
                    }

                    if (dots[index]) {
                        dots[index].classList.remove("w-6", "bg-white/30");
                        dots[index].classList.add("w-12", "bg-orange");
                    }
                    currentSlide = index;
                };

                const nextSlide = () => {
                    let next = (currentSlide + 1) % slides.length;
                    showSlide(next);
                };

                const startCarousel = () => {
                    if (interval) clearInterval(interval);
                    interval = setInterval(nextSlide, 7000); // Change image every 7s
                };

                // Add dot click listeners
                dots.forEach((dot, index) => {
                    dot.addEventListener("click", () => {
                        showSlide(index);
                        startCarousel(); // reset timer
                    });
                });

                // Init
                setTimeout(() => {
                    showSlide(0);
                }, 100);
                startCarousel();
            }

            // Run on load and View Transitions
            initHeroCarousel();
            document.addEventListener("astro:page-load", initHeroCarousel);
        </script>

        <TrustFeatures />
        <VehicleCategories />
        <ContactSection />
    </main>
    <Footer />
</Layout>
