---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Kontakt | Autohaus Eckenberger">
    <Header />
    <main class="bg-cream min-h-screen pb-24">
        <div class="bg-navy py-16 text-white mb-16">
            <div class="container mx-auto px-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-8 h-1 bg-orange"></div>
                    <span
                        class="text-orange font-black uppercase tracking-[0.3em] text-[10px]"
                        >Wir sind für Sie da</span
                    >
                </div>
                <h1
                    class="text-4xl md:text-6xl font-black uppercase tracking-tighter"
                >
                    Ihre <span class="text-orange">Anfrage</span>
                </h1>
            </div>
        </div>

        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
                <!-- Contact Form Card -->
                <div
                    class="bg-white rounded-[3rem] p-10 md:p-16 shadow-2xl border border-gray-100"
                >
                    <h2
                        class="text-3xl font-black text-navy uppercase tracking-tight mb-8"
                    >
                        Schreiben Sie uns
                    </h2>

                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label
                                    class="text-[10px] font-black uppercase text-gray-400 tracking-widest ml-4"
                                    >Vorname</label
                                >
                                <input
                                    type="text"
                                    placeholder="Max"
                                    class="w-full bg-cream border-none rounded-2xl py-4 px-6 font-bold text-navy focus:ring-2 focus:ring-orange transition-all outline-none"
                                />
                            </div>
                            <div class="space-y-2">
                                <label
                                    class="text-[10px] font-black uppercase text-gray-400 tracking-widest ml-4"
                                    >Nachname</label
                                >
                                <input
                                    type="text"
                                    placeholder="Mustermann"
                                    class="w-full bg-cream border-none rounded-2xl py-4 px-6 font-bold text-navy focus:ring-2 focus:ring-orange transition-all outline-none"
                                />
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-black uppercase text-gray-400 tracking-widest ml-4"
                                >E-Mail Adresse</label
                            >
                            <input
                                type="email"
                                placeholder="max@beispiel.de"
                                class="w-full bg-cream border-none rounded-2xl py-4 px-6 font-bold text-navy focus:ring-2 focus:ring-orange transition-all outline-none"
                            />
                        </div>

                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-black uppercase text-gray-400 tracking-widest ml-4"
                                >Telefonnummer</label
                            >
                            <input
                                type="tel"
                                placeholder="+49 123 4567890"
                                class="w-full bg-cream border-none rounded-2xl py-4 px-6 font-bold text-navy focus:ring-2 focus:ring-orange transition-all outline-none"
                            />
                        </div>

                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-black uppercase text-gray-400 tracking-widest ml-4"
                                >Ihre Nachricht</label
                            >
                            <textarea
                                rows="5"
                                placeholder="Wie können wir Ihnen helfen?"
                                class="w-full bg-cream border-none rounded-2xl py-4 px-6 font-bold text-navy focus:ring-2 focus:ring-orange transition-all outline-none resize-none"
                            ></textarea>
                        </div>

                        <div class="flex items-center gap-3 px-4 py-2">
                            <input
                                type="checkbox"
                                id="privacy"
                                class="w-5 h-5 rounded border-gray-300 text-orange focus:ring-orange"
                            />
                            <label for="privacy" class="text-xs text-gray-500"
                                >Ich akzeptiere die <a
                                    href="/datenschutz"
                                    class="underline hover:text-orange"
                                    >Datenschutzerklärung</a
                                >.</label
                            >
                        </div>

                        <button
                            type="submit"
                            class="w-full py-6 bg-orange hover:bg-navy text-white font-black rounded-[2rem] transition-all shadow-xl shadow-orange/20 uppercase tracking-[0.2em]"
                        >
                            Anfrage jetzt senden
                        </button>
                    </form>
                </div>

                <!-- Info & Map -->
                <div class="space-y-12">
                    <div class="space-y-8">
                        <h2
                            class="text-3xl font-black text-navy uppercase tracking-tight"
                        >
                            Unsere Zentrale
                        </h2>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                            <div class="space-y-2">
                                <span
                                    class="text-orange font-black uppercase tracking-widest text-[10px]"
                                    >Standort</span
                                >
                                <p class="text-navy font-bold text-lg">
                                    Hundsbach 13c<br />95652 Waldsassen
                                </p>
                            </div>
                            <div class="space-y-2">
                                <span
                                    class="text-orange font-black uppercase tracking-widest text-[10px]"
                                    >Kernzeiten</span
                                >
                                <p class="text-navy font-bold text-lg">
                                    Mo - Fr: 09:00 - 18:00<br />Sa: 09:00 -
                                    13:00
                                </p>
                            </div>
                        </div>
                    </div>

                    <div
                        class="relative group aspect-video md:aspect-square lg:aspect-[4/3] rounded-[3rem] overflow-hidden shadow-2xl border-4 border-white"
                    >
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2551.488661644782!2d12.3023!3d50.0028!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47a097457d9f78d9%3A0x6a1a1a1a1a1a1a1a!2sHundsbach%2013c%2C%2095652%20Waldsassen!5e0!3m2!1sde!2sde!4v1234567890"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            class="grayscale contrast-125 transition-all group-hover:grayscale-0 duration-700"
                        ></iframe>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
