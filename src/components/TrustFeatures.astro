---
const features = [
    {
        title: "100+ Fahrzeuge",
        description:
            "Ständiger Bestand an hochwertigen Nutzfahrzeugen & PKW direkt vor Ort.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-1.1 0-2 .9-2 2v7c0 1.1.9 2 2 2h2"/><circle cx="7" cy="17" r="2"/><path d="M9 17h6"/><circle cx="17" cy="17" r="2"/></svg>`,
    },
    {
        title: "TÜV-Geprüft",
        description:
            "Alle unsere Fahrzeuge durchlaufen einen strikten Qualitätscheck.",
        badge: "HU/AU NEU",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>`,
    },
    {
        title: "Mehrsprachig",
        description:
            "Wir beraten Sie kompetent auf Deutsch, Tschechisch, Russisch & Ukrainisch.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" x2="22" y1="12" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>`,
    },
];
---

<section
    class="py-24 bg-white relative -mt-24 mx-6 lg:mx-12 rounded-[3.5rem] shadow-[0_20px_60px_-15px_rgba(0,0,0,0.1)] z-20 border border-gray-100/50 reveal delay-200"
>
    <div class="container mx-auto px-6">
        <div
            class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-8 divide-y md:divide-y-0 md:divide-x divide-gray-100"
        >
            {
                features.map((feature, index) => (
                    <div
                        class={`flex flex-col items-center text-center p-4 md:p-8 space-y-6 reveal delay-${(index + 1) * 100}`}
                    >
                        <div class="w-16 h-16 rounded-full bg-orange/10 flex items-center justify-center text-orange mb-2">
                            <Fragment set:html={feature.icon} />
                        </div>
                        <h3 class="text-xl font-bold text-navy uppercase tracking-tight">
                            {feature.title}
                        </h3>
                        <p class="text-gray-500 text-sm leading-relaxed max-w-[250px]">
                            {feature.description}
                        </p>
                        {feature.badge && (
                            <span class="inline-block px-3 py-1 bg-green-100 text-green-700 text-[10px] font-black rounded-full uppercase">
                                {feature.badge}
                            </span>
                        )}
                    </div>
                ))
            }
        </div>
    </div>
</section>
