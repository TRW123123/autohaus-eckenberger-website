---
const navLinks = [
    { name: "Fahrzeugbestand", href: "/fahrzeugbestand" },
    { name: "Service", href: "/#service" },
    { name: "Über uns", href: "/#ueber-uns" },
    { name: "Kontakt", href: "/kontakt" },
];

const phoneNumber = "09632 - 923 090";
---

<header
    class="fixed top-6 left-1/2 -translate-x-1/2 w-[95%] max-w-7xl z-[90] bg-navy/80 backdrop-blur-xl border border-white/10 rounded-[2rem] py-3 shadow-2xl transition-all duration-500"
>
    <div class="container mx-auto px-6 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group">
            <img
                src="/logo.png"
                alt="Auto-Eckenberger Logo"
                class="h-12 w-auto object-contain transition-transform group-hover:scale-105"
            />
            <div class="hidden md:block">
                <span
                    class="block text-white font-black text-xl leading-none uppercase tracking-tighter"
                    >Auto-Eckenberger</span
                >
                <span
                    class="block text-orange text-[10px] font-bold uppercase tracking-[0.2em]"
                    >Nutzfahrzeuge & Spezialist</span
                >
            </div>
        </a>

        <!-- Desktop Nav -->
        <nav class="hidden lg:flex items-center gap-8">
            {
                navLinks.map((link) => (
                    <a
                        href={link.href}
                        class="text-white/80 hover:text-white font-semibold text-sm uppercase tracking-wide transition-colors"
                    >
                        {link.name}
                    </a>
                ))
            }
        </nav>

        <!-- Header Actions -->
        <div class="flex items-center gap-4">
            <!-- Language Mockup -->
            <div
                class="hidden xl:flex items-center gap-2 mr-4 border-r border-white/10 pr-4"
            >
                <span
                    class="text-[10px] font-bold text-white/40 uppercase tracking-widest"
                    >Beratung:</span
                >
                <div class="flex gap-2">
                    {
                        ["DE", "CZ", "RU", "UA"].map((lang) => (
                            <span class="w-6 h-6 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-[8px] font-black text-white hover:bg-orange hover:border-orange transition-all cursor-default">
                                {lang}
                            </span>
                        ))
                    }
                </div>
            </div>

            <a
                href={`tel:${phoneNumber.replace(/\s/g, "")}`}
                class="hidden md:flex items-center gap-2 px-5 py-2.5 bg-orange hover:bg-orange/90 text-white font-bold rounded-full transition-all text-sm group"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-phone group-hover:rotate-12 transition-transform"
                    ><path
                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                    ></path></svg
                >
                {phoneNumber}
            </a>

            <!-- Mobile Menu Toggle (Simplified) -->
            <button class="lg:hidden p-2 text-white" aria-label="Menü öffnen">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-menu"
                    ><line x1="4" x2="20" y1="12" y2="12"></line><line
                        x1="4"
                        x2="20"
                        y1="6"
                        y2="6"></line><line x1="4" x2="20" y1="18" y2="18"
                    ></line></svg
                >
            </button>
        </div>
    </div>
</header>
